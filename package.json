{
  "name": "talon-mcp",
  "version": "0.1.0",
  "description": "MCP server for Talon accessibility framework - exposes logs, REPL, and system information",
  "type": "module",
  "main": "tools/talon.ts",
  "bin": {
    "talon-mcp": "./tools/mcp-server.ts"
  },
  "exports": {
    ".": "./tools/talon.ts",
    "./tools/talon": "./tools/talon.ts",
    "./mcp-server": "./tools/mcp-server.ts"
  },
  "scripts": {
    "test": "bunx vitest",
    "test:watch": "bunx vitest --watch",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "prepare": "git config core.hooksPath .githooks"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "zod": "^3.25.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@types/bun": "^1.3.6",
    "@types/node": "^25.0.10",
    "vitest": "^4.0.18"
  }
}
